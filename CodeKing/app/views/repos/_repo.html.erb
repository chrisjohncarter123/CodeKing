                    <% else %>
                        <%= User.find(push.user_id).email %>
                    <% end %>
                    
                </li>
                <li><em>Message: </em> <%= push.message %></li>
                <li><em>Content: </em> <%= push.content %></li>
            </ul>
        <% end %>
   
   
    
